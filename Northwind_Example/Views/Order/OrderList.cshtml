@model IEnumerable<Northwind_Example.Models.Order>

<div style="text-align:right;">
    <button class="btn btn-lg btn-danger">@Html.ActionLink("Back to List","List","Employee",new{},new{@class="hyperlink"})</button>
</div>
<br />
<br />
<table class="table container">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
                <label>Product</label>
        </th>
    </tr>
</thead>
<tbody>        
    @foreach (var item in Model)
    {
    <tr>
        <td>
            <div class="col-2">@Html.DisplayFor(x=>item.OrderId)</div>
        </td>
        <td>
            <div class="col-2">@Html.DisplayFor(x=>item.OrderDate)</div>
        </td>
        <td>
            <div class="col-2">@Html.DisplayFor(x=>item.CustomerId)</div>
        </td>
        <td>
        <button class="btn btn-sm btn-warning">@Html.ActionLink("Product","ProductDetail",new {id=item.OrderId},new{@class="hyperlink"})</button>
        </td>
    </tr>
}

    </tbody>
</table>